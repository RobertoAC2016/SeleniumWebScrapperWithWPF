<Window x:Class="WebScrappingWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebScrappingWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="50" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="lblstatus" FontSize="30" Content="Waiting..."></Label>
        <Button x:Name="btnrunscrapper" Content="Scrapper" FontSize="30" Margin="10" Click="btnrunscrapper_Click"></Button>
    </StackPanel>
</Window>
